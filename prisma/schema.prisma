generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id       Int       @id @default(autoincrement())
  user     String    @unique
  password String
  email    String    @unique
  Routine  Routine[]
  goals    Goal[]
}

model RoutineExercise {
  id          Int     @id @default(autoincrement())
  name        String
  weight      String
  series      String
  repetitions String
  Routine     Routine @relation(fields: [routineId], references: [id], onDelete: Cascade)
  routineId   Int
}

model Routine {
  id              Int               @id @default(autoincrement())
  name            String
  person          Person            @relation(fields: [personId], references: [id])
  personId        Int
  routineExercise RoutineExercise[]
  duration        Int?
}

model Exercise {
  id   Int    @id @default(autoincrement())
  name String
}

model Goal {
  id        Int         @id @default(autoincrement())
  objective String
  weight    String
  date      DateTime    @default(now())
  images    GoalImage[]
  person    Person      @relation(fields: [personId], references: [id])
  personId  Int
}

model GoalImage {
  id     Int    @id @default(autoincrement())
  url    String
  goal   Goal?  @relation(fields: [goalId], references: [id])
  goalId Int?
}
