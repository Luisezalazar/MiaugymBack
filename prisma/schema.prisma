generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id       Int       @id @default(autoincrement())
  user     String    @unique
  password String
  email    String    @unique
  goals    Goal[]
  Routine  Routine[]
}

model RoutineExercise {
  id          Int     @id @default(autoincrement())
  name        String
  weight      String
  series      Int
  repetitions String
  routineId   Int
  order       Int     @default(0)
  Routine     Routine @relation(fields: [routineId], references: [id], onDelete: Cascade)
}

model Routine {
  id              Int               @id @default(autoincrement())
  name            String
  personId        Int
  duration        Int?
  person          Person            @relation(fields: [personId], references: [id])
  routineExercise RoutineExercise[]
}

model Exercise {
  id   Int    @id @default(autoincrement())
  name String
}

model Goal {
  id        Int         @id @default(autoincrement())
  weight    String
  date      DateTime    @default(now())
  personId  Int
  objective String
  person    Person      @relation(fields: [personId], references: [id])
  images    GoalImage[]
}

model GoalImage {
  id     Int    @id @default(autoincrement())
  url    String
  goalId Int?
  goal   Goal?  @relation(fields: [goalId], references: [id])
}
